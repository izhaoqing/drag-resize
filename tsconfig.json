{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "incremental": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "jsx": "preserve",
        // "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "@types/node",
        ],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["dist", "node_modules"]
}
